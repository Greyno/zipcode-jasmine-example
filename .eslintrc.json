{
    "extends": "airbnb/legacy",
    "env": {
        "browser": true,
        "jasmine": true
    },
    "rules": {
        "func-names": "off",
        "indent": ["error", 4],
        "linebreak-style": "off",
        "quotes": "off",
        "max-len": ["warn", 160],
        "no-use-before-define": ["error", "nofunc"],
        "no-plusplus": "off",
        "no-param-reassign": "off",
        "no-unused-vars": "off",
        "one-var": "off",
        "one-var-declaration-per-line": "off",
        "padded-blocks": "off",
        "spaced-comment": "off",
        "vars-on-top": "off"
    }
}
